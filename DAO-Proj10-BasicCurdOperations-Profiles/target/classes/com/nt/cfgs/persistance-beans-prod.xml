<?xml version="1.0" encoding="UTF-8"?>
<beans profile="prod" xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    
    <bean id="hkcpds" class="com.zaxxer.hikari.HikariDataSource">  
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="jdbcUrl" value="jdbc:oracle:thin:@localhost:1521:xe"/>
        <property name="username" value="hr"/>
        <property name="password" value="hr"/>           
    </bean>
    
    <bean id="template3" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" value="#{hkcpds}"></property>
    </bean>
    
    
    <bean id="dao" class="com.nt.dao.DepartmentDAOImpl">
       <constructor-arg value="#{template3}"/>
    </bean>
    

</beans>
